{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "diagnostics": true,
    "module": "es6",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "esnext",
    "paths": {
      "*": ["*"],
      "src/*": ["src/*"]
    },
  },
  "exclude": [
    "node_modules"
  ]
}
