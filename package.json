{
  "name": "merit-money-native",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "yarn test:unit && yarn test:e2e",
    "clean": "detox clean-framework-cache",
    "test:e2e": "detox build && jest __e2e__",
    "test:unit": "jest -u __tests__"
  },
  "dependencies": {
    "prop-types": "15.6.0",
    "react": "16.0.0",
    "react-native": "0.48.2",
    "react-native-auth0": "1.2.0",
    "react-native-elements": "0.17.0",
    "react-native-star-rating": "1.0.8",
    "react-native-vector-icons": "4.4.0",
    "react-navigation": "1.0.0-beta.13",
    "react-redux": "5.0.6",
    "redux": "3.7.2",
    "redux-thunk": "2.2.0",
    "remote-redux-devtools": "0.5.12"
  },
  "devDependencies": {
    "babel-eslint": "8.0.1",
    "babel-jest": "21.2.0",
    "babel-preset-latest": "6.24.1",
    "babel-preset-react-native": "4.0.0",
    "detox": "5.8.1",
    "eslint": "4.8.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-react": "7.4.0",
    "eslint-plugin-react-native": "3.1.0",
    "jest": "21.2.1",
    "prettier-eslint": "^8.2.2",
    "react-native-dotenv": "0.1.0",
    "react-test-renderer": "16.0.0"
  },
  "jest": {
    "preset": "react-native",
    "bail": true,
    "setupTestFrameworkScriptFile": "<rootDir>/jest/setup.js",
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|react-navigation)/"
    ]
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/meritMoneyNative.app",
        "build": "xcodebuild -project ios/meritMoneyNative.xcodeproj -scheme meritMoneyNative -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7"
      }
    }
  }
}
