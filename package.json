{
  "name": "MeritMoney",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "clean": "rm -rf ~/.rncache && watchman watch-del-all && yarn remove-builds",
    "remove-builds": "rm -rf ios/build android/build android/app/build",
    "lint": "eslint ./src --ext .js",
    "generate-apk": "cd android && ./gradlew assembleRelease",
    "test:watch": "jest --watch src/",
    "test:ci": "jest --coverage --runInBand --verbose src/",
    "test": "jest -u src/"
  },
  "dependencies": {
    "prop-types": "15.6.1",
    "react": "16.3.1",
    "react-native": "0.55.4",
    "react-native-animatable": "^1.3.0",
    "react-native-collapsible": "^0.12.0",
    "react-native-linear-gradient": "2.4.0",
    "react-native-text-gradient": "0.0.8",
    "react-native-vector-icons": "4.6.0",
    "react-navigation": "2.3.0"
  },
  "devDependencies": {
    "@selleo/eslint-config-react": "^0.4.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "8.2.3",
    "babel-jest": "23.0.1",
    "babel-preset-react-native": "4.0.0",
    "eslint": "4.19.1",
    "eslint-plugin-react-native": "3.2.1",
    "husky": "^1.0.0-rc.6",
    "jest": "23.1.0",
    "lint-staged": "^7.1.3",
    "react-native-dotenv": "0.1.1",
    "react-test-renderer": "16.3.1"
  },
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!(react-navigation|react-native))/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "rnpm": {
    "assets": [
      "./src/assets/fonts"
    ]
  }
}
